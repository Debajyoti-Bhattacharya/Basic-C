Input:
#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main()
{
    int a, b;
    float c, d;
    int sum, diff;
    float s, df;

    scanf("%d %d", &a,&b);
    scanf("%f %f", &c,&d);
    sum = a+b;
    diff = a-b;
    s = c+d;
    df = c-d;
    printf("%d %d\n", sum, diff);
    printf("%.1f %.1f", s ,df );
    
    
    return 0;
}
